# =================================================================
# ADS SaaS Client - Environment Configuration
# =================================================================

# ----------------------------
# APPLICATION SETTINGS
# ----------------------------
NEXT_PUBLIC_APP_NAME=ADS SaaS
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ----------------------------
# STRIPE INTEGRATION
# ----------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ----------------------------
# ANALYTICS & TRACKING
# ----------------------------
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=123456
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ----------------------------
# FEATURE FLAGS
# ----------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true

# ----------------------------
# API CONFIGURATION
# ----------------------------
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_CACHE_TTL=300000

# ----------------------------
# UPLOAD CONFIGURATION
# ----------------------------
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp4,avi,mov
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/files/upload

# ----------------------------
# SOCIAL LOGIN
# ----------------------------
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id

# ----------------------------
# MAP INTEGRATION
# ----------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ----------------------------
# DEVELOPMENT SETTINGS
# ----------------------------
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENVIRONMENT=development

# ----------------------------
# PERFORMANCE SETTINGS
# ----------------------------
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_STATIC_ASSETS=true
NEXT_PUBLIC_PRELOAD_ROUTES=true

# ----------------------------
# SECURITY SETTINGS
# ----------------------------
NEXT_PUBLIC_CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456