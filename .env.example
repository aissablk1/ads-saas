# =================================================================
# ADS SaaS Platform - Environment Configuration
# =================================================================

# ----------------------------
# APPLICATION SETTINGS
# ----------------------------
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------
# DATABASE CONFIGURATION
# ----------------------------
POSTGRES_DB=ads_saas
POSTGRES_USER=ads_user
POSTGRES_PASSWORD=ads_password_secure_2024
DATABASE_URL=postgresql://ads_user:ads_password_secure_2024@localhost:5432/ads_saas

# ----------------------------
# REDIS CACHE CONFIGURATION
# ----------------------------
REDIS_PASSWORD=redis_password_secure_2024
REDIS_URL=redis://default:redis_password_secure_2024@localhost:6379

# ----------------------------
# JWT SECURITY
# ----------------------------
JWT_SECRET=your_super_secure_jwt_secret_change_in_production_minimum_32_chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------
# STRIPE PAYMENT INTEGRATION
# ----------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ----------------------------
# EMAIL CONFIGURATION (SMTP)
# ----------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ads-saas.com
EMAIL_FROM_NAME=ADS SaaS Platform

# ----------------------------
# FILE UPLOAD CONFIGURATION
# ----------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp4,avi,mov

# ----------------------------
# SECURITY SETTINGS
# ----------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_chars_random_string

# ----------------------------
# MONITORING CONFIGURATION
# ----------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_change_me
PROMETHEUS_RETENTION=200h

# ----------------------------
# SSL/TLS CONFIGURATION
# ----------------------------
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_EMAIL=admin@ads-saas.com

# ----------------------------
# INTEGRATION APIS
# ----------------------------
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ----------------------------
# LOGGING CONFIGURATION
# ----------------------------
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=14

# ----------------------------
# DEVELOPMENT SETTINGS
# ----------------------------
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
ENABLE_CORS=true

# ----------------------------
# PRODUCTION OPTIMIZATIONS
# ----------------------------
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=31536000
API_CACHE_TTL=300
CLUSTER_MODE=false

# ----------------------------
# BACKUP CONFIGURATION
# ----------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ads-saas-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ----------------------------
# HEALTH CHECK SETTINGS
# ----------------------------
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ----------------------------
# FEATURE FLAGS
# ----------------------------
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_INTEGRATIONS=true
ENABLE_TEAM_FEATURES=true

# ----------------------------
# ADMIN PANEL CONFIGURATION
# ----------------------------
ADMIN_EMAIL=admin@ads-saas.com
ADMIN_PASSWORD=admin_password_change_in_production
ADMIN_2FA_ENABLED=true