{
  "name": "ads-saas-platform",
  "version": "1.0.0",
  "description": "ADS SaaS - Advanced Advertising Campaign Management Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "npm run start:server",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "type-check": "npm run type-check:server && npm run type-check:client",
    "type-check:server": "cd server && npm run type-check",
    "type-check:client": "cd client && npm run type-check",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:server": "cd server && rm -rf node_modules dist",
    "clean:client": "cd client && rm -rf node_modules .next dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "validate": "node scripts/validate-system.js",
    "security": "npm audit && cd client && npm audit && cd ../server && npm audit",
    "security:fix": "npm audit fix && cd client && npm audit fix && cd ../server && npm audit fix",
    "db:migrate": "cd server && npm run db:push",
    "db:seed": "cd server && npm run db:seed",
    "db:reset": "cd server && npx prisma migrate reset --force",
    "backup": "node scripts/backup-system.js",
    "restore": "node scripts/restore-system.js",
    "deploy:staging": "NODE_ENV=staging docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "NODE_ENV=production docker-compose -f docker-compose.prod.yml up -d",
    "monitor": "docker-compose exec grafana /bin/bash",
    "logs:server": "docker-compose logs -f server",
    "logs:client": "docker-compose logs -f client",
    "logs:db": "docker-compose logs -f postgres",
    "health": "curl -f http://localhost:8000/health && curl -f http://localhost:3000/api/health",
    "performance": "node scripts/performance-test.js",
    "load-test": "node scripts/load-test.js",
    "e2e": "cd client && npm run e2e",
    "update:deps": "npx npm-check-updates -u && cd client && npx npm-check-updates -u && cd ../server && npx npm-check-updates -u"
  },
  "keywords": [
    "saas",
    "advertising",
    "campaign-management",
    "nextjs",
    "express",
    "typescript",
    "docker",
    "prisma",
    "stripe"
  ],
  "author": "ADS SaaS Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-check-updates": "^16.14.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ads-saas/platform"
  }
}
