# =================================================================
# ADS SaaS Server - Environment Configuration
# =================================================================

# ----------------------------
# APPLICATION SETTINGS
# ----------------------------
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# ----------------------------
# DATABASE CONFIGURATION
# ----------------------------
DATABASE_URL=postgresql://ads_user:ads_password_secure_2024@localhost:5432/ads_saas
POSTGRES_DB=ads_saas
POSTGRES_USER=ads_user
POSTGRES_PASSWORD=ads_password_secure_2024
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ----------------------------
# REDIS CONFIGURATION
# ----------------------------
REDIS_URL=redis://default:redis_password_secure_2024@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_secure_2024

# ----------------------------
# JWT CONFIGURATION
# ----------------------------
JWT_SECRET=your_super_secure_jwt_secret_change_in_production_minimum_32_chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------
# STRIPE CONFIGURATION
# ----------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PRO=price_pro_id
STRIPE_PRICE_BUSINESS=price_business_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# ----------------------------
# EMAIL CONFIGURATION
# ----------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ads-saas.com
EMAIL_FROM_NAME=ADS SaaS Platform

# ----------------------------
# FILE UPLOAD CONFIGURATION
# ----------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp4,avi,mov
UPLOAD_PATH=/uploads
STATIC_PATH=/static

# ----------------------------
# SECURITY SETTINGS
# ----------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_chars_random_string
CORS_ORIGIN=http://localhost:3000

# ----------------------------
# LOGGING CONFIGURATION
# ----------------------------
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=logs
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=14

# ----------------------------
# INTEGRATIONS
# ----------------------------
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ----------------------------
# MONITORING CONFIGURATION
# ----------------------------
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# ----------------------------
# PERFORMANCE SETTINGS
# ----------------------------
COMPRESSION_ENABLED=true
CLUSTER_MODE=false
MAX_JSON_SIZE=10mb
MAX_URL_ENCODED_SIZE=10mb
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# ----------------------------
# DEVELOPMENT SETTINGS
# ----------------------------
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api/docs

# ----------------------------
# BACKUP CONFIGURATION
# ----------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups